<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover" style="font-size: 36px;">
            <thead>
                <tr>
                    <th>Preguntas</th>
                    <th>Tag</th>
                    <% if(session.user) { %> 
                        <th colspan="2">Acciones</th>
                    <% } %>
                </tr>
            </thead>
            <tbody>
            <% if (quizes.length > 0) { %>
                <% var i; for (i=0; i < quizes.length ; i++) { %>
                <tr>
                    <td>
                        <a href="/quizes/<%= quizes[i].id %>">
                            <%= quizes[i].pregunta %>
                        </a>
                    </td>
                    <td>
                        <a href="/quizes/<%= quizes[i].id %>">
                            <%= quizes[i].tag %>
                        </a>
                    </td>
                    <% if(session.user) { %> 
                        <td>
                            <a href="/quizes/<%= quizes[i].id %>/edit"><button> Editar </button></a>
                        </td>
                        <td>
                            <form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
                                <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
                                    borrar
                                </button>
                            </form>
                        </td>
                    <% } %>
                </tr>
                <% } %>
            <% } else { %>
                <tr><td colspan="2">No se encontraron quizes</td></tr>
            <% } %> 
            </tbody>
        </table>
        <% if(session.user) { %> 
            <a href="/quizes/new"><button class="btn btn-primary">Crear pregunta</button></a>
        <% } %>
    </div>
</div>